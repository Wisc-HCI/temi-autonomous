# /etc/systemd/system/fastapi.service

[Unit]
Description=FastAPI application using Uvicorn
After=network.target

[Service]
User=pi
WorkingDirectory=/home/pi/temi-autonomous/backend
# ExecStart=/home/pi/.local/bin/uvicorn main:app --host 0.0.0.0 --port 8000
ExecStart=/home/pi/.local/bin/gunicorn main:app -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:8000
Restart=always
RestartSec=3
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
